<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.wuzp.loaderdemo">

    <!-- 需要获取读取通话记录的权限 -->
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.cursor2adapter.Cursor2AdapterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.cursor2cursoradapter.Cursor2CursorAdapterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.cursorloader2adapter.CursorLoader2AdapterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.cursorloader2cursoradapter.CursorLoader2CursorAdapterActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>